-- TABLE COUNTRY (PARENT)
CREATE TABLE COUNTRY
(
COUNTRY_ID NUMBER(2) CONSTRAINT PK_COUNTRY_ID PRIMARY KEY,
COUNTRY_NAME VARCHAR2(30) CONSTRAINT NN_COUNTRY_NAME NOT NULL
);

-- TABLE CITY (PARENT CHILD)
CREATE TABLE CITY
(
CITY_ID NUMBER(2) CONSTRAINT PK_CITY_ID PRIMARY KEY,
CITY_NAME VARCHAR2(30) CONSTRAINT NN_CITY_NAME NOT NULL,
NB_POP NUMBER(4) CONSTRAINT CK_NB_POP CHECK (NB_POP>0),
COUNTRY_ID NUMBER(2) CONSTRAINT FK_COUNTRY REFERENCES COUNTRY(COUNTRY_ID)
);

-- TABLE PERSON (CHILD)
CREATE TABLE PERSON
(
PERSON_ID NUMBER(6) CONSTRAINT PK_PERSON_ID PRIMARY KEY,
PERSON_NAME VARCHAR2(30) CONSTRAINT NN_PERSON_NAME NOT NULL,
PERSON_AGE NUMBER(3) CONSTRAINT CK_PERSON_AGE CHECK (PERSON_AGE>0),
PERSON_EMAIL VARCHAR2(40) CONSTRAINT UK_PERSON_EMAIL UNIQUE,
BIRTH_DATE DATE CONSTRAINT CK_BIRTH_DATE CHECK (BIRTH_DATE>TO_DATE('01-JAN-1000')),
CITY_BIRTH NUMBER(2) CONSTRAINT FK_CITY REFERENCES CITY(CITY_ID),
PERSON_PHONE VARCHAR2(30) CONSTRAINT NN_PERSON_PHONE NOT NULL
);
